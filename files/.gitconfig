[user]
    name = Jonathan Kim
    email = me@jonathan-kim.com

[hub]
    host = github.com

[rerere]
    enabled = 1

[alias]
    co = checkout
    br = branch
    brs = branch -a
    s = status -sb
    st = status
    ci = commit
    c = commit -am

    get = !git pull && git submodule init && git submodule update
    up = fetch -p origin
    send = !sh -c 'git push -u origin "$0"'

    rmbr = !sh -c 'git branch -D "$0" && git push origin --delete "$0"'

    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    yesterday = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --before=12am --after=12am.yesterday --author=me --branches
    today = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --after=12am --author=me --branches

    new = checkout -b
    save = stash --patch

    clear = !git reset --hard HEAD && git clean -fd

[github]
    user = hijonathan

[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"
[push]
    default = upstream

[color]
    diff = auto

[core]
    excludesfile = /Users/jonathankim/.gitignore_global
